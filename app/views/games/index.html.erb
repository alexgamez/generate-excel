<p id="notice"><%= notice %></p>

<h1>Games</h1>

<% if @games.count > 0 %>
  <%= link_to "Basic XLS report", basic_xls_report_path %> <br>
  <%= link_to "Custom XLS report", custom_xls_report_path %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Genre</th>
      <th>Platform</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.title %></td>
        <td><%= game.genre %></td>
        <td><%= game.platform %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
